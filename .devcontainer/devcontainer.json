{
    "name": "go-play",
    "build": { 
      "dockerfile": "./Dockerfile",
      "context": ".",
      "target": "user",
      "args": {
        "USERNAME": "${localEnv:USER:gopher}"
      }  
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "bierner.markdown-mermaid",
          "eamodio.gitlens",
          "golang.go",
          "GitHub.codespaces",
          "GitHub.copilot",
          "GitHub.copilot-labs",
          "ms-vsliveshare.vsliveshare",
          "ms-azuretools.vscode-docker"
          ]
      }
    },
    "mounts": [
      {
          "type": "bind",
          "source": "${localEnv:HOME}/.gitconfig",
          "target": "/home/${localEnv:USER:gopher}/.gitconfig"
      },
      {
          "type": "bind",
          "source": "${localEnv:HOME}/.git-credentials",
          "target": "/home/${localEnv:USER:gopher}/.git-credentials"
      },
      { 
          "type": "bind",
          "source": "${localEnv:HOME}/.ssh",
          "target": "/home/${localEnv:USER:gopher}/.ssh"
      },
      { 
          "type": "bind",
          "source": "/var/run/docker.sock",
          "target": "/var/run/docker.sock"
      }
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workdir/${localWorkspaceFolderBasename},type=bind,consistency=cached", 
    "workspaceFolder": "/workdir/${localWorkspaceFolderBasename}",
    "forwardPorts": []
  }
    